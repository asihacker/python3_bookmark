server {
    listen 80;
        server_name www.porters.vip;# 请填写真实域名
        charset utf-8;
        location /verify/cookie/index.html{
            ＃ 在响应头中设置固定的Cookie值
            add_header Set-Cookie "isfirst=789kg7uc1pp4c";
            root ／root/www/html;
            index ／index.html;
                                            }
        location /verify/cookie/content.html{
            if($http_cookie !~*"isfirst=789kq7uc1pp4c"){
            ＃ 如果请求头中的Cookie值不符合要求，则将网页临时重定向到index.html
                rewrite content.html ./index.html redirect;
                root ／root/www/html;
                index ／content.html;
            }
                                            }
}